<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="felipemartins.com.br.tourappreserv.MainActivity"
    android:orientation="vertical">

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@color/colorPrimary"
        android:id="@+id/imageButton_destaques"
        android:layout_weight="1"
        android:clickable="true"
        android:onClick="destaques"/>

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@color/colorAccent"
        android:id="@+id/imageButton_promo"
        android:layout_weight="1"
        android:clickable="true"
        android:onClick="promo"/>

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@color/colorPrimaryDark"
        android:id="@+id/imageButton_tudo"
        android:layout_weight="1"
        android:clickable="true"
        android:onClick="tudo"/>
</LinearLayout>
